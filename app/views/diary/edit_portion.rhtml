	<td colspan="6">
		<div class="food_being_edited">
		
		<% form_remote_tag :url => {:action => :edit_portion, :id => @portion}, 
							:update => "today_portion_#{@portion.id}" do %>
			<%= h(@portion.food.long_description) %>
			<p>Serving size:</p>
			<p>
				<%= text_field :portion, :quantity, {:size => 6} %>
				<%= select :portion, :weight_id, @portion.food.weights_as_measure_id_array %>
				<%= submit_tag "Update serving" %>
				<%= hidden_field :portion, :food_id %>
				<%= hidden_field_tag "date", @date %>
			</p>
			<table>
				<tr>
					<th>Calories</th>
					<th>Fat(g)</th>
					<th>Protein(g)</th>
					<th>Carbs(g)</th>
				</tr>
				<tr>
					<td class="numeric"><%= h(@portion.energy) %></td>
					<td class="numeric"><%= h(@portion.fat) %></td>
					<td class="numeric"><%= h(@portion.protein) %></td>
					<td class="numeric"><%= h(@portion.carbohydrate) %></td>
				</tr>
			</table>
			<p>
				<%= submit_to_remote "save_changes", "Save Changes", 
					:url =>  {:action => :update_portion, :id => @portion}, :update => "today" %>
				<%= submit_to_remote "cancel_changes", "Cancel", 
					:url =>  {:action => :cancel_update_portion, :id => @portion}, :update => "today" %>
			</p>
		<% end %>
		</div>
	</td>
