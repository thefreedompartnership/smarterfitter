<html xmlns="http://www.w3.org/1999/xhtml" version="-//W3C//DTD XHTML 1.1//EN" xml:lang="en">
<head>
	<title>SmarterFitter Nutritional Database</title>
	<meta http-equiv="Content-Type" content="application/xhtml+xml; charset=utf-8" />
	<meta name='description' content='Search our database for calorie, carbohydrate, fat, protein and nutrient information for a wealth of foods.  Customize the results to match the quantities of the foods you eat.'/>
	<meta name='keywords' content='smarterfitter, nutritional, database, calorie, calories, carb, carbohydrate, atkins, diet, food, nutrition, health, protein, fat, nutrient, vitamin, weight loss, dieting, health'/>
	<%= stylesheet_link_tag 'default' %>
	
	<script type="text/javascript" charset="utf-8">
		function setup() {
			document.getElementById('complete_nutrient_data').style.display = 'none';
			document.getElementById('show_complete_nutrient_data').onclick = function() {
				document.getElementById('simple_nutrient_data').style.display = 'none';
				document.getElementById('complete_nutrient_data').style.display = 'block';
				return false;				
			}
		}
		window.onload = setup;
	</script>
	
</head>

<body>
<div id="center_column">

<p style="color: green"><%= flash[:notice] %></p><div id="menu_bar">
	<ul>
		<li>
			<% form_tag( { :controller => 'search', :action => 'search' }, { :method => :get }, nil ) do %>
			  <%= text_field_tag 'q', params[:q] %>
			  <%= submit_tag 'Search' %>
			<% end %>
		</li>
	</ul>
	<h1>SmarterFitter<h1>
</div>
<h2><%= @food.long_description %></h2>


<% form_tag( { :action => 'index' }, { :method => :get } ) do %>
	Serving size
	<%= text_field_tag 'amount', @portion.quantity, { :size => 3 } %> x 
	<%= select_tag 'measure', 
				   '<option value="0">100 grams</option>' + 
				   options_for_select(@food.weights.collect { |w| ["#{w.amount} #{w.measure_description}", w.id]},
				 		params[:measure].to_i)
#				   options_from_collection_for_select(@food.weights, 'id', 'measure_description', params[:measure].to_i)
	%>
	<%= submit_tag 'Change' %>
<% end %>
<p>Amount per <%= @portion.quantity %> 
<% if @portion.quantity == 1.0 %>
		serving 
<% else %> 
		servings 
<% end %> 
of <%= @portion.weight.amount %> <%= @portion.weight.measure_description %></p>
